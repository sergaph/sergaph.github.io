---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
// import Avatar from "../assets/avatar.svg";
// import Avatar from "../assets/avatar-cropped.svg";
import Avatar from "../assets/avatar_crop.png";
// import MyComponent from '../components/MyComponent.astro';
---

<Layout title="Welcome to Astro.">
  <main>
    <div class="h-screen grid grid-flow-row-dense grid-cols-12 grid-rows-12">
      <div class="col-span-12 content-center">
        <p>Menu</p>
      </div>
      <div class="row-span-11 col-span-7 content-center">
        <p class="text-8xl text-center text-[#CFCFCF]">MASLE</p>
      </div>
      <div class="row-span-11 col-span-5 flex justify-end">
        <!-- overflow-hidden flex items-end -->
        <div class="flex items-end">
          <!-- class="object-contain hover:object-scale-down" -->
          <Image
            src={Avatar}
            alt="descriptive text"
          />
        </div>
      </div>
    </div>
  </main>
</Layout>
