    <div class="h-screen w-screen">
      <div class="grid grid-cols-2 place-content-between pl-5 pt-5 pr-5">
        <div class="flex justify-start align-top">
          <span class="text-[#E1E1E1] text-[50px] mt-[-20px] font-mono">M.</span>
        </div>
        <div class="flex justify-end align-top">
          <div class="bg-white h-10 w-10 flex justify-center align-middle">
            <div class="text-[#1c1c1c] text-[40px] mt-[-13px]">â‰¡</div>
          </div>
        </div>
      </div>
      <slot />
    </div>
  </body>
</html>
