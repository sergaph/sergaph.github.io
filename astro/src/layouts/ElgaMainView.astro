---
import { Image } from "astro:assets";
// import AstroLogo from "../assets/astro-logo-gray.svg";
// import MenuButton from "../components/MenuButton.astro";
import Avatar from "../assets/avatar2.png";
import SocialVK from "../assets/social/VK_white.svg";
import SocialTG from "../assets/social/Telegram_white.svg";
import SocialGH from "../assets/social/Github_white.svg";
import SocialLIN from "../assets/social/LinkedIN_white.svg";
import SocialUNSP from "../assets/social/Unsplash_white.svg";

interface Props {
  title: string;
  subTitle?: string;
}

const { title, subTitle } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <style is:global>
      @supports (-webkit-filter: drop-shadow(0 4px 6px rgba(0, 0, 0, 0.1))) {
        .drop-shadow-md {
          -webkit-filter: drop-shadow(0 4px 6px rgba(0, 0, 0, 0.1));
        }
      }
      .filter-gray {
        filter: invert(94%) sepia(5%) saturate(200%) hue-rotate(10deg)
          brightness(100%) contrast(95%);
      }
      @font-face {
        font-family: "Partisanpress";
        src: url("/fonts/Partisanpress.otf") format("truetype");
        font-weight: normal;
        font-style: normal;
        font-display: swap;
      }
      .name-photography-style {
        font-family: "Partisanpress", sans-serif;
        font-weight: normal;
        font-style: normal;
        line-height: 1;
        font-size: clamp(4rem, 30vw, 8rem);
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
      }
      @font-face {
        font-family: "LincolnElectric";
        src: url("/fonts/LincolnElectric-Regular.ttf") format("truetype");
        font-weight: normal;
        font-style: normal;
        font-display: swap;
      }
      .name-panorama-style {
        font-family: "LincolnElectric", sans-serif;
        font-weight: normal;
        font-style: normal;
        line-height: 1;
        font-size: clamp(2rem, 20vw, 6rem);
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
        padding-bottom: 0.8rem;
      }
      @font-face {
        font-family: "SpecialEliteLomzz";
        src: url("/fonts/SpecialEliteLomzz.ttf") format("truetype");
        font-weight: normal;
        font-style: normal;
        font-display: swap;
      }
      .name-story-style {
        font-family: "SpecialEliteLomzz", sans-serif;
        font-weight: normal;
        font-style: normal;
        line-height: 1.6;
        font-size: clamp(1rem, 15vw, 4.5rem);
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
      }

      @font-face {
        font-family: "AEmpirial";
        src: url("/fonts/aempirial.ttf") format("truetype");
        font-weight: normal;
        font-style: normal;
        font-display: swap;
      }
      .name-font-style {
        font-family: "AEmpirial", sans-serif;
        font-weight: normal;
        font-style: normal;
        font-size: clamp(1rem, 10vw, 3rem);
        line-height: 1;
        letter-spacing: 0.4rem;
        color: rgba(0, 0, 0, 0.796);
      }

      .line-with-circles {
        position: relative;
      }

      .line-with-circles::before,
      .line-with-circles::after {
        content: "";
        position: absolute;
        width: 4px; /* Диаметр круга */
        height: 4px;
        background-color: gray; /* Цвет круга */
        border-radius: 50%;
        top: 50%;
        transform: translateY(-50%);
      }

      .line-with-circles::before {
        left: 0;
      }

      .line-with-circles::after {
        right: 0;
      }
      /* @font-face {
        font-family: "Behrens";
        src: url("/fonts/Behrens.woff") format("woff");
        font-weight: normal;
        font-style: normal;
        font-display: swap;
      }
      .hidden {
        display: none;
      } */
    </style>
    <!-- <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Noto+Serif+SC:wght@200..900&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap"
      rel="stylesheet"
    /> -->
    <title>{title}</title>
  </head>
  <body class="bg-[#F0EEEC]">
    <div class="grid grid-cols-6 gap-4 w-screen">
      <!-- Personal -->
      <div
        class="col-span-6 pt-4 pb-9 flex flex-col items-center justify-center"
      >
        <Image class="max-w-[120px]" src={Avatar} alt="descriptive text" />
        <p class="name-font-style pt-5">Сергей</p>
        <p class="name-font-style">Масленников</p>
      </div>
      <!-- Content -->
      <div class="col-span-6 flex items-center justify-center">
        <div
          class="bg-[#F2F2F2] rounded-[52px] shadow-md ml-2 mr-2 w-full h-auto max-w-[800px] max-h-[600px] mx-auto overflow-hidden"
        >
          <div class="flex flex-col">
            <a href="#">
              <p class="name-photography-style flex justify-center">
                фотографии
              </p>
            </a>
            <div
              class="w-[90%] border-b border-gray-300 mx-auto my-4"
            >
            </div>
            <a href="#">
              <p class="name-panorama-style flex justify-center">панорамы</p>
            </a>
            <div
              class="w-[90%] border-b border-gray-300 mx-auto my-4"
            >
            </div>
            <a href="#">
              <p class="name-story-style flex justify-center">нарративы</p>
            </a>
          </div>
        </div>
      </div>
      <!-- Footer -->
      <div class="col-span-6 flex items-center justify-center gap-4">
        <div class="flex flex-row gap-5 justify-center pt-20 pb-20">
          <Image
            class="max-w-[35px] filter-gray"
            src={SocialVK}
            alt="descriptive text"
          />
          <Image
            class="max-w-[35px] filter-gray"
            src={SocialTG}
            alt="descriptive text"
          />
          <Image
            class="max-w-[35px] filter-gray"
            src={SocialGH}
            alt="descriptive text"
          />
          <Image
            class="max-w-[35px] filter-gray"
            src={SocialLIN}
            alt="descriptive text"
          />
          <Image
            class="max-w-[35px] filter-gray"
            src={SocialUNSP}
            alt="descriptive text"
          />
        </div>
      </div>
    </div>
