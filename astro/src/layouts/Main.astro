---
import { Image } from "astro:assets";
import AstroLogo from "../assets/astro-logo-gray.svg";
import MenuButton from "../components/MenuButton.astro";

interface Props {
  title: string;
  subTitle?: string;
}

const { title, subTitle } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <style is:global>
      @font-face {
        font-family: "Behrens";
        src: url("/fonts/Behrens.woff") format("woff");
        font-weight: normal;
        font-style: normal;
        font-display: swap;
      }
      .hidden {
        display: none;
      }
    </style>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Noto+Serif+SC:wght@200..900&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
  </head>
  <body class="bg-[#3D3D3D]">
    <div class="h-screen w-screen">
      <div class="grid grid-cols-1 h-screen">
        <div class="grid grid-cols-3 place-content-between pl-5 pt-5 pr-5">
          <div class="flex justify-start align-top">
            <a class="mt-[-20px]" href="/">
              <span class="text-[#E1E1E1] text-[50px] font-mono">M.</span>
            </a>
          </div>
          <div class="flex justify-center align-top">
            <span class="text-[#E1E1E1] text-[35px]">
              {subTitle}
            </span>
          </div>
          <div class="flex justify-end align-top">
            <!-- <div class="h-10 w-10 flex justify-center align-middle"> -->
              <!-- <Image
                class="cursor-pointer"
                src={Burger}
                alt="descriptive text"
              /> -->
              <MenuButton />
            <!-- </div> -->
          </div>
        </div>
        <slot />
        <div class="place-content-end pl-5 pb-5 pr-5">
          <div class="flex justify-between">
            <div>
              <a href="https://astro.build/">
                <Image
                  class="max-w-[110px] cursor-pointer"
                  src={AstroLogo}
                  alt="descriptive text"
                />
              </a>
            </div>
            <div class="pt-2">
              <p class="text-sm text-[#616161] font-semibold">
                masle.net Â© 2024
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>